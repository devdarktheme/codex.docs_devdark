body {
  font-family: system-ui, Helvetica, Arial, Verdana;
  color: var(--color-text-main);
  background-color: var(--color-bg-light);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

svg {
  fill: currentColor;
}

a {
  text-decoration: none;
  color: inherit
}
.ce-settings {
  background-color: #de6161;
  border-color: #de6161
}
.ce-block--selected {
  background: rgba(145, 145, 145, 0.575);
}

.ce-popover {
  background-color: #242526;
  border-color: var(--color-line-gray);
}
.ce-popover__item-icon {
  background: none;
}
.cdx-search-field {
  background: rgb(68 73 80);
}
.cdx-search-field__input {
  color: white;
}
/* .icon {
  color: #de6161;
}

.ce-settings__default-zone>.ce-settings__button>.icon {
  color: #242526!important;
} */

.ce-popover__item:hover {
  background-color: #79797994;
}
.ce-toolbar__settings-btn, .ce-toolbar__plus {
  color: #de6161;
}
.ce-toolbar__settings-btn:hover, .ce-toolbar__plus:hover {
  background-color: #79797979;
}
/* Track */
::-webkit-scrollbar-track {
  background-color: transparent!important;
}

::-webkit-scrollbar {
  width: 12px;
  background-color: transparent!important;
}

::-webkit-scrollbar-thumb {
  border-radius: 10px;
  background-color: #797979;
  border-color: #79797994;;
}

.ce-block--selected, .ce-block--selected .ce-block__content {
  background: transparent;
}

.link-tool__input {
  background-image: url("data:image/svg+xml,<svg width='13' height='14' xmlns='http://www.w3.org/2000/svg'><path d='M8.567 13.629c.728.464 1.581.65 2.41.558l-.873.873A3.722 3.722 0 1 1 4.84 9.794L6.694 7.94a3.722 3.722 0 0 1 5.256-.008L10.484 9.4a5.209 5.209 0 0 1-.017.016 1.625 1.625 0 0 0-2.29.009l-1.854 1.854a1.626 1.626 0 0 0 2.244 2.35zm2.766-7.358a3.722 3.722 0 0 0-2.41-.558l.873-.873a3.722 3.722 0 1 1 5.264 5.266l-1.854 1.854a3.722 3.722 0 0 1-5.256.008L9.416 10.5a5.2 5.2 0 0 1 .017-.016 1.625 1.625 0 0 0 2.29-.009l1.854-1.854a1.626 1.626 0 0 0-2.244-2.35z' fill='currentColor' transform='translate(-3.667 -2.7)'/></svg>%0A");
  color: #de6161;
}

input {
  color: #e0e0e0;
}

.docs-sidebar__search, select, select:focus, select:active {
  box-shadow: unset;
  color: #e0e0e0;
}

.navigator__item {
  color: #e0e0e0;
}
